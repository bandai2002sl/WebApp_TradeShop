
@{
    ViewBag.Title = "Đăng nhập";
}

<section class="section">
    <div class="margin-bottom-20">
        <div class="wrap_background_aside margin-bottom-40 page_login">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 col-lg-offset-3 col-md-offset-3">
                    <div class="page-login">
                        <h1 class="title_heads a-center"><span>Đăng nhập</span></h1>
                        <div id="login">
                            @using (Html.BeginForm("Login", "Home", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
                            {
                                @Html.ValidationSummary(true)
                                <div class="form-signup" style="color:red; text-align: center">
                                    @ViewData["LoiDN"]
                                </div>
                                <div class="form-signup clearfix">
                                    <fieldset class="form-group">
                                        <label>Email <span class="required">*</span></label>
                                        @Html.TextBox("email", null, new { placeholder = "Nhập Email", @class = "form-control form-control-lg" })
                                        <p class="error_input">@ViewData["Loi1"]</p>
                                    </fieldset>
                                    <fieldset class="form-group">
                                        <label>Mật khẩu <span class="required">*</span></label>
                                        <input type="password" class="form-control form-control-lg" name="password" placeholder="Mật khẩu" required="" />
                                        <p class="error_input">@ViewData["Loi2"]</p>
                                    </fieldset>

                                    <div class="pull-xs-left margin-top-10">
                                        <input class="btn btn-style btn_50" type="submit" value="Đăng nhập">
                                        <span class="block a-center quenmk">Quên mật khẩu?</span>
                                        <span class="block a-center dkm">Chưa có tài khoản, đăng ký <a href="@Url.Action("Signin", "Home")" class="btn-link-style btn-register">tại đây</a></span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
