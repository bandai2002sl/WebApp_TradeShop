@{
    Layout = null;
}
@model IEnumerable<TradeShop.Models.DanhMuc>

<div class="shopee-header-section_header">
    <div class="shopee-header-section_header_title">Danh mục</div>
</div>
<div class="swiper mySwiper">
    <div class="swiper-wrapper" style="flex-direction: unset;">
        @foreach (var item in Model)
        {
            <div class="swiper-slide">
                <div class="home-category-list_group">
                    <a class="home-category-list_category-grid" href="@Url.Action("ProductCategory", "Home", new { id_cat = item.id_cat })">
                        <div class="cat_in_list">
                            <div class="nut">
                                <div class="img_cat_home" style="background-image: url('../../Assets/Images/Category/@item.image');"></div>
                                <div class="title_cat_home">
                                    <div class="title_cat">
                                        @item.name_cat
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
    <div class="swiper-prev slick-arrow swiper-button-disabled" tabindex="-1" role="button" aria-label="Previous slide" aria-controls="swiper-wrapper-eb108d335a481535b" aria-disabled="true">
        <i class="fa fa-angle-left icon"></i>
    </div>
    <div class="swiper-next slick-arrow" tabindex="0" role="button" aria-label="Next slide" aria-controls="swiper-wrapper-eb108d335a481535b" aria-disabled="false">
        <i class="fa fa-angle-right icon"></i>
    </div>
    <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
</div>
<script>
    var swiper = new Swiper(".mySwiper", {
        slidesPerView: 10,
        grid: {
            rows: 2,
        },
        spaceBetween: 0,
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        navigation: {
            nextEl: ".swiper-next",
            prevEl: ".swiper-prev",
        },
    });
</script>